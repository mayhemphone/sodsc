

<div class="row">
  <div class="col s12">
    <h1>Create Content Item</h1>
  </div>
</div>
 <div class="row">
 <!--FORM-->
    <form class="col s12" action="/content" method="POST">
      <div class="row">
        <div class="input-field col s12">
          <input id="title" name="title" type="text" class="validate">
          <label for="title">Title</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s10">
          <input id="description" name="description" type="text" class="validate">
          <label for="description">Description</label>
        </div>
        <div class="input-field col s2">
        	
        	<label >
              <input name="featured" type="checkbox" />
              <span >Featured</span>
            </label>
        
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <textarea id="meat" name="meat" type="text" class="materialize-textarea validate">
          </textarea><label for="meat">Content</label>
        </div>
      </div>
        <div class="row">
          <div class="col s12">
            <button class="btn waves-effect waves-light grey darken-3 right" type="submit">Create
              <i class="material-icons right">add_circle_outline</i>
            </button>
          </div>
        </div>
    </form>
  </div>
<script>
    document.getElementById("upload_widget_opener").addEventListener("click", function() {
      console.log('clicked')
        cloudinary.openUploadWidget({ cloud_name: 'mayhemphone', upload_preset: 'sodsc-unsigned', folder: 'sodsc-dev/merch'},
                function(error, result) {
                    console.log(error, result)
                    // Push URL into text input
                    if(result){
                      for (var i=0;i<result.length;i++){
                        u = 'img_'+(i+1)
                        console.log(u)
                        if (document.getElementById(u)) {
                          document.getElementById(u).value = result[i].url;
                          document.getElementById('r_'+u).src = result[i].url;
                        } else{
                        alert("you can only upload 3 images")
                        }
                      }
                    } else {
                      console.log('no result')
                    }
                
                });

    }, false);
</script>
